<main>
  <div class="container">
    <div class="main-wrapper">
      <div class="login-wrapper">
        <div id="login-panel" class="login-panel">
          <div class="login-title">註冊</div>
          <form action="/register" method="POST" id="login-form">
            <div class="wrapper">
              <label for="name" class="name-label">暱稱</label>
              <input type="text" id="name" name="name" placeholder="小可愛">
            </div>
            <div class="email-wrapper">
              <label for="email" class="login-email-label">信箱</label>
              <input type="text" id="email" name="email" placeholder="不會寄認證煩你">
            </div>
            <div class="password-wrapper">
              <label for="password" class="login-password-label">密碼</label>
              <input type="text" id="password" name="password" placeholder="英文或數字">
            </div>
            <button class="login-btn">註冊</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>